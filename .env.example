# Environment Variables for Sports Prediction Platform
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=sports_user
DB_PASSWORD=changeme_secure_password_here
DB_NAME=sports_prediction
DB_SSLMODE=disable  # Use 'require' or 'verify-full' in production

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=changeme_generate_secure_random_string_here
JWT_EXPIRATION=24h

# Service Ports
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8084
CONTEST_SERVICE_PORT=8085
PREDICTION_SERVICE_PORT=8086
SCORING_SERVICE_PORT=8087
SPORTS_SERVICE_PORT=8088
NOTIFICATION_SERVICE_PORT=8089
CHALLENGE_SERVICE_PORT=8090

# CORS Configuration
CORS_ALLOWED_ORIGINS=*  # Restrict in production

# Logging
LOG_LEVEL=info

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_ENABLED=false

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
EMAIL_ENABLED=false

# Worker Configuration
WORKER_POOL_SIZE=5
